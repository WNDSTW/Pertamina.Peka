@model Tuple<List<Pertamina.Peka.Models.Gambar>, List<Pertamina.Peka.Models.Grafik>>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div id="CarouselHome" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
               @{
                    var iterations1 = 0;
                }
                @foreach (var item in Model.Item1)
                {
                    if (iterations1 == 0)
                    {
                        <li data-target="#CarouselHome" data-slide-to="@iterations1" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#CarouselHome" data-slide-to="@iterations1"></li>
                    }
                    iterations1++;
                }
        </ol>
        <div class="carousel-inner">
            @{
                var iterations = 0;
            }
            @foreach (var item in Model.Item1)
            {
                if (iterations == 0)
                {
                    <div class="item active">
                        <img src="@item.Photo" style="width:100%;height:700px;">
                    </div>
                }
                else
                {
                    <div class="item">
                        <img src="@item.Photo" style="width:100%;height:700px;">
                    </div>
                }
                iterations++;

            }   
            @*<div class="item active">
                <img src="~/Images/a.jpg" alt="Los Angeles" style="width:100%;height:500px;">
            </div>

            <div class="item">
                <img src="~/Images/b.jpg" alt="Chicago" style="width:100%;height:500px;">
            </div>

            <div class="item">
                <img src="~/Images/c.jpg" alt="New york" style="width:100%;height:500px;">
            </div>*@
        </div>
        <a class="left carousel-control" href="#CarouselHome" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#CarouselHome" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <img src="~/Images/apaitu.PNG" width="80%" height="80%" />
    </div>
    <div class="col-lg-6">
        <img src="~/Images/cara.PNG" width="80%" height="80%" />
