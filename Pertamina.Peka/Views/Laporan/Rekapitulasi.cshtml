            //     'excel', 'pdf', 'print'
            //],
            "ajax": {
                "url": "/Laporan/GetRekapitulasiDetail",
                "data": function (data) {
                    data.Bulan = $("#Bulan").val();
                    data.Tahun = $("#Tahun").val();
                    data.Bagian = $("#Bagian").val();
                },
                "type": "POST",
                "datatype": "json"
            },
          
            "columnDefs":
             [{
                 "targets": [0],
                 "visible": true,
             },
