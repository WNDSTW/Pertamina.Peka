             },
              {
                  "targets": [4],
                  "orderable": true
              }],

            "columns": [
                  { "title": "Nopek", "data": "nopek", "name": "nopek" },
                  { "title": "Nama", "data": "namapegawai", "name": "namapegawai", "searchable": true },
                  { "title": "Bagian", "data": "Bagian", "name": "Bagian", "searchable": true },
